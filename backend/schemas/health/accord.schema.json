{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Health - ACORD",
  "type": "object",
  "properties": {
    "claim_id": {"type": "string"},
    "policy_number": {"type": "string"},
    "insurance_start_date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "insurance_expiry_date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "incident_type": {"type": "string"},
    "incident_date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "location": {"type": "string"},
    "patient_id": {"type": "string"},
    "hospital_code": {"type": "string"},
    "injuries_reported": {"type": "boolean"},
    "estimated_damage_cost": {"type": "number"},
    "police_report_filed": {"type": "boolean"},
    "police_report_no": {"type": "string"},
    "diagnosis": {"type": "string"},
    "hospital": {"type": "string"}
  },
  "required": [
    "claim_id",
    "policy_number",
    "incident_date",
    "patient_id",
    "hospital_code"
  ]
}

